    <!-- Custom JS -->
    <script>
        // Pricing toggle functionality
        document.getElementById('yearly').addEventListener('change', function() {
            if (this.checked) {
                // Update prices for yearly billing
                document.querySelectorAll('.display-4').forEach(function(price) {
                    if (price.textContent.includes('29€')) {
                        price.textContent = '23€';
                    } else if (price.textContent.includes('99€')) {
                        price.textContent = '79€';
                    }
                });
            }
        });
        
        document.getElementById('monthly').addEventListener('change', function() {
            if (this.checked) {
                // Update prices for monthly billing
                document.querySelectorAll('.display-4').forEach(function(price) {
                    if (price.textContent.includes('23€')) {
                        price.textContent = '29€';
                    } else if (price.textContent.includes('79€')) {
                        price.textContent = '99€';
                    }
                });
            }
        });

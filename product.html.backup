    <!-- Custom JS -->
    <script>
        function playDemo() {
            // Simulate demo playback
            const button = event.target.closest('button');
            const originalContent = button.innerHTML;
            
            button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Chargement...';
            button.disabled = true;
            
            setTimeout(() => {
                button.innerHTML = '<i class="fas fa-check me-2"></i>Démo lancée !';
                button.classList.remove('btn-primary', 'btn-outline-primary');
                button.classList.add('btn-success');
                
                // Show demo modal or redirect
                setTimeout(() => {
                    alert('Démo interactive lancée ! Découvrez les fonctionnalités de Vachellia.');
                    button.innerHTML = originalContent;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-primary');
                    button.disabled = false;
                }, 2000);
            }, 1500);
        }
    </script>
